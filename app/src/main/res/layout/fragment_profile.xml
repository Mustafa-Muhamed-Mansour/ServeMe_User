<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6F1F7"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".profile.ProfileFragment"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:src="@drawable/add_photo"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_gender_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:hint="Gender"
                android:textColorHint="@color/black"
                android:layout_below="@id/img_profile"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <EditText
                    android:id="@+id/edit_gender_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    />


            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/linear_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@id/text_gender_profile"
                android:orientation="horizontal"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_fn_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="First name"
                    android:textColorHint="@color/black"
                    app:startIconDrawable="@drawable/ic_name"
                    >

                    <EditText
                        android:id="@+id/edit_fn_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_ln_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Last name"
                    android:textColorHint="@color/black"
                    app:startIconDrawable="@drawable/ic_name"
                    >

                    <EditText
                        android:id="@+id/edit_ln_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_phone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_margin="@dimen/_5sdp"
                android:hint="Phone Number"
                android:textColorHint="@color/black"
                android:layout_below="@id/linear_names"
                app:startIconDrawable="@drawable/ic_phone"
                >

                <EditText
                    android:id="@+id/edit_phone_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:layout_below="@id/linear_names"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_margin="@dimen/_5sdp"
                android:hint="E-mail"
                android:textColorHint="@color/black"
                android:layout_below="@id/text_phone_profile"
                app:startIconDrawable="@drawable/ic_email"
                >

                <EditText
                    android:id="@+id/edit_email_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/text_email_profile"
                android:background="@drawable/button_create_account"
                android:text="Edit"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                app:backgroundTint="@null"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn_save_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_email_profile"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_create_account"
                android:text="Save"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                app:backgroundTint="@null"
                />

            <!--        android:layout_centerInParent="true"-->


            <Button
                android:id="@+id/btn_exit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_email_profile"
                android:background="@drawable/ic_button_exit"
                android:layout_margin="@dimen/_5sdp"
                app:backgroundTint="@null"
                />



            <!--        <ProgressBar-->
            <!--            android:id="@+id/loading_register"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_below="@id/edit_job_profile"-->
            <!--            android:layout_centerInParent="true"-->
            <!--            android:indeterminateTint="@color/black"-->
            <!--            android:layout_margin="@dimen/_5sdp"-->
            <!--            android:padding="@dimen/_5sdp"-->
            <!--            android:visibility="gone"-->
            <!--            />-->

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</layout>