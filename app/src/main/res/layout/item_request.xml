<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_request"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            />

<!--        <View-->
<!--            android:id="@+id/View"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_3sdp"-->
<!--            android:background="#36C940"-->
<!--            android:layout_below="@id/img_item_request"-->
<!--            android:layout_margin="@dimen/_3sdp"-->
<!--            />-->

        <LinearLayout
            android:id="@+id/linear_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_item_request"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/txt_name_item_request"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_15ssp"
                android:text="Name"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="@dimen/_5sdp"
                />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="#36C940"
                />

            <TextView
                android:id="@+id/txt_phone_item_request"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_15ssp"
                android:text="Phone"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="@dimen/_5sdp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_job_item_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:text="job"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@id/linear_employee"
            android:drawableStart="@drawable/ic_work"
            android:drawablePadding="@dimen/_5sdp"
            />

    </RelativeLayout>
</layout>